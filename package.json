{
  "name": "1-click-mining-app",
  "description": "Safex 1 Click Mining App",
  "version": "v0.0.1",
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/safex/safex_miner"
  },
  "author": {
    "name": "Safex Developers",
    "url": "https://safex.io",
    "email": "team@safex.io"
  },
  "maintainers": [
    {
      "name": "Uroš Mitrović",
      "url": "https://github.com/Kiu0612",
      "email": "uros@balkaneum.com"
    }
  ],
  "license": "MIT",
  "bugs": "https://github.com/safex/safex_miner/issues",
  "keywords": [
    "safex cash",
    "safex mining app",
    "bitcoin",
    "blockchain",
    "electron"
  ],
  "devDependencies": {
    "electron": "^1.7.11",
    "electron-builder": "^19.41.0",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^8.7.2",
    "electron-react-devtools": "^0.5.3",
    "electron-rebuild": "^1.8.2",
    "electron-winstaller": "^2.6.3",
    "foreman": "^3.0.0",
    "react-scripts": "^0.8.5"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "electron-context-menu": "^0.9.1",
    "js-file-download": "^0.4.4",
    "node-xmrig-cpu": "git+https://github.com/atanmarko/node-xmrig.git",
    "react": "^15.6.2",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^15.6.2",
    "react-router": "^3.2.1",
    "safex-addressjs": "git+https://github.com/safex/safex_addressjs.git"
  },
  "main": "src/electron-starter.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start -p 4000",
    "dist": "build",
    "make-mac-installer": "npm run build && electron-builder build -m",
    "make-win-installer": "npm run build && electron-builder build -w --x64",
    "make-linux-installer": "npm run build && electron-builder build -l",
    "make-all-installers": "npm run build && electron-builder build -ml && electron-builder build -w --x64 --ia32"
  },
  "build": {
    "appId": "com.electron.safex_1_click_mining_app",
    "extends": null,
    "files": [
      "**/*",
      "build/*.*",
      "build/css/*.*",
      "build/fonts/*.*",
      "build/images/*.*",
      "build/static/css/*.*",
      "build/static/js/*.*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "public/images/icons/icon.icns",
      "type": "distribution",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "public/images/icons/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "public/images/icons/icon.png"
    }
  }
}
